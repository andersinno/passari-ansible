[Unit]
Description=download-object RQ worker %i
After=network.target

[Service]
Type=simple
WorkingDirectory={{ passari_workflow_install_path }}
Environment=LANG=en_US.UTF-8
Environment=LC_ALL=en_US.UTF-8
Environment=LC_LANG=en_US.UTF-8
ExecStart={{ passari_workflow_install_path }}/download-object-worker.sh %i
ExecReload=/bin/kill -s HUP $MAINPID
ExecStop=/bin/kill -s TERM $MAINPID
# Give each worker 20 minutes to finish the current task before forcing
# shutdown
TimeoutStopSec=1200
PrivateTmp=true
Restart=always
# Wait 5 seconds before restarting to ensure the old worker isn't registered
# anymore
RestartSec=5
User={{ passari_user }}
Group={{ passari_user }}

[Install]
WantedBy=multi-user.target
